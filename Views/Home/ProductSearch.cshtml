@{
    ViewBag.Title = "ProductSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row bg-dark">
    @foreach (var item in Model)
    {
        <div class=" col-12 col-sm-6 col-md-3 col-lg-3 col-xl-3 menuall bg-gradient bg-opacity-75 rounded-bottom d-block mx-auto">
            <div class="Items mt-5 ">
                <img style="width:300px" class="d-block mx-auto" src="~/images/@item.PRImage">
                <div class="allthings text-center text-white">
                    <p class="itemheading">@item.PRName<p>
                    <p class="itemdes">@item.PRDescription.Substring(0, 5)</p>
                    <div class="add d-inline-flex">
                        <p class="addalliconsp">@item.PRPrize/=</p>
                    </div><br>


                    <button type="button" class="btn btn-primary addtocart mb-3" onclick="location.href='/Home/ProductPreview/@item.PRID'">details</button>
                </div>
            </div>
        </div>
 
    }
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
                window.location.href = "ProductPage";
            };
        </script>
    }

